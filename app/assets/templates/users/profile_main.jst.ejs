<section class="user-profile-info profile-main-content group">
<h3>
  <% if (user.get('hosting_status') === "yes") { %> <span class="accepting">ACCEPTING GUESTS</span> <% } %>
  <% if (user.get('hosting_status') === "maybe") { %><span class="maybe">MAYBE ACCEPTING GUESTS</span> <% } %>
  <% if (user.get('hosting_status') === "no") { %> <span class="no">NOT ACCEPTING GUESTS</span> <% } %>
</h3>


<section class="profile-actions">
<% if (SofaHopping.currentUser.id !== parseInt(user.id)) { %>

<% if (user.get('hosting_status') === "yes" || user.get('hosting_status') === "maybe") { %>
  <button id="make_request">Host Me</button>
<% } %>


  <% if (SofaHopping.currentUser.is_connected_with(parseInt(user.id)) === false) { %>
    <button id="add_friend">Add friend</button>
  <% } else if(SofaHopping.currentUser.is_added_friend(parseInt(user.id))){ %>
    <button id="remove_friend">Remove friend</button>
  <% } %>
<% } %>
</section>
</section>

<section class="user-profile-references-container profile-main-content"></section>
<section class="user-profile-friends-container profile-main-content"></section>

<style>

.profile-actions{
  float:right;
}
</style>
