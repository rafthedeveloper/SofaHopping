<section class="search-results">

<% if (searchType === "all" || searchType === "hosts"){ %>

<header>
<% if (searchType === "all") { %>
  <%= members.length %> Members matching
<% } else if(searchType === "hosts") { %>
  <%= members.length %> Hosts matching
<% } %>
</header>



<ul class="search-results-list">
<% members.each(function(member) { %>
  <li>
    <article class="group">
      <img src="<%= member.escape('avatar_url') %>">

      <section class="user-name-loc">
      <a href="#people/<%= member.id %>">
        <h3><%= member.escape('fname') %> <%= member.escape('lname') %><h3>
      </a>
      <small class="loc"><%= member.escape('location') %> </small>

      <% if (member.escape('num_refs') > 0) { %>
        <small class="num_refs"> <%= member.escape('num_refs') %> references </small>
      <% } %>
      </section>

      <section class="user-host-logged">
      <span>
        <% if (member.get('hosting_status') === "yes") { %><span class="accepting">ACCEPTING GUESTS</span><% } %>
        <% if (member.get('hosting_status') === "maybe") { %><span class="maybe">MAYBE ACCEPTING GUESTS</span><% } %>
        <% if (member.get('hosting_status') === "no") { %><span class="no">NOT ACCEPTING GUESTS</span><% } %>
      </span>
      <small class="last-login timeago" title="<%= member.escape('updated_at') %>"></small>
      </section>
    </article>
  </li>
<% }) %>
</ul>

<% } %>

<% if (searchType === "travelers") { %>
  <header>
  <% if (members.length === 1) { %>
    1 Traveler Found
  <% } else if (members.length > 1){ %>
    <%= members.length %> Travelers Found
  <% } else { %>
    0 Travelers Found
    <% } %>
</header>


  <ul class="search-results-list">
  <% members.each(function(member) { %>
    <li>
      <article class="group">
        <img src="<%= member.escape('avatar_url') %>" width="100">


        <section class="user-name-loc">
        <a href="#people/<%= member.escape('user_id') %>">
          <h3><%= member.escape('fname') %> <%= member.escape('lname') %><h3>
        </a>
        <strong>From:</strong> <%= member.escape('from') %>
          <br>
          <strong>Visiting:</strong> <%= member.escape('to') %>
          <br><br>
          <p> <%= member.escape('description') %> </p>
        </section>
        <section class="user-host-logged">
          <small> <%= member.escape('arrival_date') %> to <%= member.escape('departure_date') %></small>
          <small> <%= member.escape('num_guests') %> traveler(s) </small>
        </section>


      </article>
    </li>
  <% }) %>
  </ul>



<% } %>
</section>
